        <Button fx:id="btnPackageAdd" alignment="CENTER" layoutX="14.0" layoutY="421.0" maxHeight="40.0"
                maxWidth="100.0" minHeight="40.0" minWidth="100.0" mnemonicParsing="false" prefHeight="40.0"
                prefWidth="100.0" style="-fx-background-radius: 8px;" text="Add" textAlignment="CENTER"/>
        <TextField fx:id="txtPkgStartDate" editable="false" layoutX="557.0" layoutY="160.0"/>
        <TextField fx:id="txtPkgEndDate" editable="false" layoutX="766.0" layoutY="160.0"/>
        <ComboBox fx:id="cmbPackages" layoutX="566.0" layoutY="72.0" prefWidth="150.0"/>
        <TextField fx:id="txtPkgDesc" editable="false" layoutX="557.0" layoutY="251.0" prefHeight="26.0"
                   prefWidth="360.0"/>
        <TextField fx:id="txtPkgBasePrice" editable="false" layoutX="557.0" layoutY="339.0"/>
        <TextField fx:id="txtPkgAgencyCommission" editable="false" layoutX="766.0" layoutY="339.0"/>
        <Button fx:id="btnPackageSave" alignment="CENTER" disable="true" layoutX="231.0" layoutY="421.0"
                maxHeight="40.0" maxWidth="100.0" minHeight="40.0" minWidth="100.0" mnemonicParsing="false"
                prefHeight="40.0" prefWidth="100.0" style="-fx-background-radius: 8px;" text="Save"
                textAlignment="CENTER"/>
        <Label layoutX="557.0" layoutY="130.0" text="Start Date"/>
        <Label layoutX="766.0" layoutY="130.0" text="End Date"/>
        <Label layoutX="557.0" layoutY="223.0" text="Description"/>
        <Label layoutX="556.0" layoutY="308.0" text="Base Price"/>
        <Label layoutX="762.0" layoutY="308.0" text="Commission"/>
    </children>
