                <TableColumn fx:id="colPkgStartDate" prefWidth="82.0" text="Start Date"/>
                <TableColumn fx:id="colPkgEndDate" prefWidth="93.0" text="End Date"/>
                <TableColumn fx:id="colPkgDesc" prefWidth="75.0" text="Description"/>
                <TableColumn fx:id="colPkgBasePrice" prefWidth="75.0" text="Base Price"/>
                <TableColumn fx:id="colPkgAgencyCommission" prefWidth="75.0" text="Commission"/>
            </columns>
