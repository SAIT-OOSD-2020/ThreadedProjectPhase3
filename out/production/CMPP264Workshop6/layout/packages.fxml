        <Button fx:id="btnPackageDelete" alignment="CENTER" disable="true" layoutX="338.0" layoutY="421.0"
                maxHeight="40.0" maxWidth="100.0" minHeight="40.0" minWidth="100.0" mnemonicParsing="false"
                prefHeight="40.0" prefWidth="100.0" style="-fx-background-radius: 8px;" text="Delete"
