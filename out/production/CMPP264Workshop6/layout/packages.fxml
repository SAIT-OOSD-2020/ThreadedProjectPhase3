<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="475.0" prefWidth="935.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PackagesController">
    <children>
        <TableView fx:id="tblPackages" layoutX="14.0" layoutY="14.0" prefHeight="209.0" prefWidth="534.0">
