        <ComboBox fx:id="cmbProducts" layoutX="355.0" layoutY="72.0" prefWidth="150.0"/>
        <Button fx:id="btnProductDelete" alignment="CENTER" disable="true" layoutX="338.0" layoutY="421.0"
