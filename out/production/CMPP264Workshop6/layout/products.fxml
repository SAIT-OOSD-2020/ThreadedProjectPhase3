        <Label layoutX="355.0" layoutY="169.0" text="New Product:"/>
        <Label layoutX="30.0" layoutY="331.0" text="Please select a product to edit."/>
        <Label layoutX="14.0" layoutY="21.0" text="List of Products:"/>
        <Label layoutX="357.0" layoutY="39.0" text="Edit Product:"/>
    </children>
</AnchorPane>
